<div class="row">
  <%= render 'shared/user_board' %>
  <div class="stream">
    <div class="resources-block">
      <div class="row">
        <div class="col-sm-10">
          <h4 class="underlined"><%= @photo_album.title %></h4>
        </div>
        <div class="col-sm-2">
          <a href="#" data-toggle="modal", data-target="#upload-photos" class="btn btn-primary">
            <i class="icon-plus"></i>
          </a>
        </div>
      </div>
      <div id="photos" class="row">
        <%= render(@photos) || render('shared/no_resource', resources: 'Photos') %>
      </div>
    </div>
  </div>
  <%= render 'shared/sidebar', page: 'photo_album' %>
</div>
<div class="modal fade" id="upload-photos" tabindex="-1" role="dialog" aria-labelledby="uploadPhotosLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-body">
      <%= render 'photos/form' %>
    </div>
  </div>
</div>
