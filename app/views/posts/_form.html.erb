<%= form_for(@post) do |f| %>
  <div class="form-group">
    <%= f.text_area :content, class: 'form-control', autofocus: true, placeholder: 'What\'s up?', rows: 2 %>
  </div>
  <div id="img-preview" class="form-group hidden">
    <%= image_tag '' %>
  </div>
  <div class="form-group hidden">
    <%= f.file_field :attachment %>
  </div>
  <div class="form-group">
    <a id="post-attachment" href="javascript:void(0);" class="pull-right btn btn-primary">
      <i class="icon-attach-1"></i>
    </a>
    <%= button_tag(type: :submit, class: 'btn btn-primary') do %><i class="icon-paper-plane"></i> Post<% end %>
  </div>
<% end %>
