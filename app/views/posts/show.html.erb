<div id="post-<%= @post.id %>" class="show">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <%= render @post, remote: false, render_actions: true, render_comments: false %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <h4>Comments</h4>
      <hr>
      <%= render 'comments/form', commentable: @post %>
      <%= render 'shared/resource_comments', resource: @post, show_all: true %>
    </div>
  </div>
</div>
