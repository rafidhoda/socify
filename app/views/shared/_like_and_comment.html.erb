<% if user_signed_in? %>
  <div class="like-btn">
    <%= render 'likes/form', likeable: resource %>
  </div>
  <span class="likes-count"><%= resource.cached_votes_up %></span>
  <div class="comment-btn">
    <%= link_to resource do %>
      <i class="icon-comment-alt"></i>
    <% end %>
  </div>
  <span class="comments-count"><%= resource.comments_count %></span>
<% end %>
