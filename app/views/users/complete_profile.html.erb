<div class="page-content">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well">
          <h3>Complete your profile</h3>
          <hr>
          <%= form_tag set_password_user_path(@user), method: :post do %>
            <div class="form-group">
              <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'password', autofocus: true %>
            </div>
            <div class="form-group">
              <%= password_field_tag :password_confirmation, nil, class: 'form-control', placeholder: 'Confirm Password' %>
            </div>
            <div class="form-group">
              <%= submit_tag :complete, class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
